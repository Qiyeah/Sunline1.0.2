<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PueButton">
        <item name="android:width">@dimen/list_item_btn_size</item>
        <item name="android:height">@dimen/list_item_btn_size</item>
    </style>
    <style name="spinner_style">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:animationCache">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:entries">@array/shunt_state</item>
    </style>
</resources>
